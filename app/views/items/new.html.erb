 <%= link_to "See Your Listed Items Here", my_items_path, class: "btn btn-warning" %>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
    <h1> Add Your Item Here </h1>

      <%= simple_form_for(@item) do |f| %>
        <%= f.input :category, collection: Item::CATEGORIES %>
        <%= f.input :item_name %>
        <%= f.input :size %>
        <%= f.input :address %>
        <%= f.input :price %>
        <%= f.input :days_delivery %>
        <%= f.input :photo_items, as: :attachinary %>
        <%= f.submit "Create an Item", class: "btn btn-primary btn-lg btn-block" %>
      <% end %>
    </div>
  </div>

</div>



