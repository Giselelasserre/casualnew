
<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-4">
      <ul class="thumbnails">
        <div class="span4">

         <% @items.each do |item| %>

         <div class="card-content">
          <div class="card-category"></div>
          <div class="card-description">
            <div>
              <h2> <%= item.item_name %> </h2>
              <p>Price: <%= humanized_money_with_symbol(item.price) %></p>
            </div>
            <p><%= item.description %></p>
            <p> <%= link_to "See item details", item_path(item) %></p>
          </div>

          <% if item.photo_items.any? %>
          <%= cl_image_tag item.photo_items.first.path, class:"card-clothes" %>


        </div>


        <% end %>

        <% end %>

      </div>

    </ul>
  </div>
</div>
</div>





